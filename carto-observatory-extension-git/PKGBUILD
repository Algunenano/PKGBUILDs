_pkgname=observatory-extension
pkgname=carto-${_pkgname}-git
pkgver=r3.g3c475d7
pkgrel=1
pkgdesc='CARTO observatory PostgreSQL extension'
arch=('any')
url='https://github.com/CartoDB/observatory-extension'
license=('BSD')
depends=('carto-postgresql')
makedepends=('git')
source=("git://github.com/CartoDB/$_pkgname.git")
sha256sums=('SKIP')

pkgver() {
  cd $_pkgname
  ( set -o pipefail
    git describe --long --tags 2>/dev/null | cut -f 1 -d '-' --complement | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
  )
}

package() {
  #LICENSE
  cd $_pkgname
  install -Dm0644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"

  #Posgresql client extension
  mkdir -p $pkgdir/usr/share/postgresql/extension/
  DESTDIR=$pkgdir make deploy
  DESTDIR=$pkgdir make install
}
