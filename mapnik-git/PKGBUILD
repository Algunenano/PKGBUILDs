pkgname=mapnik-git
_pkgname=mapnik
pkgver=3.0.15.18.gb5a13d00e.metrics_guards
pkgrel=1
pkgdesc="A powerful map rendering toolkit used by OpenStreetmap and others"
arch=('i686' 'x86_64')
url="http://mapnik.org/"
license=('LGPL')
depends=('boost-libs' 'icu' 'libpng' 'libjpeg' 'libtiff' 'freetype2'
	 'libxml2' 'python2' 'proj' 'cairo' 'cairomm' 'python2-cairo'
	 'postgresql-libs' 'postgis' 'gdal' 'curl' 'libltdl')
optdepends=('libxslt:         Web Map Service'
            'python2-lxml:    Web Map Service'
            'python2-pillow:  Web Map Service'
            'python2-nose:    Web Map Service'
            'apache:          Web Map Service'
            'mod_fastcgi:     Web Map Service'
            'mod_fcgid:       Web Map Service'
            'mod_wsgi2:       Web Map Service')
makedepends=('boost' 'git' 'clang')
install="mapnik.install"
conflicts=("$_pkgname")
provides=("${_pkgname}=${pkgver}")
_owner="Algunenano"
_branch="metrics_guards"
source=("git://github.com/$_owner/$_pkgname.git#branch=$_branch")
sha256sums=('SKIP')

pkgver() {
  cd "$_pkgname"
  printf "%s.%s" "$(git describe --long --tags | cut -c2- | sed 's/-/./g')" $_branch
}

build() {
  cd "$_pkgname"

  git submodule update --init

  python2 scons/scons.py configure \
    PREFIX="/usr" \
    DESTDIR="$pkgdir" \
    INPUT_PLUGINS=all \
    XMLPARSER=libxml2 \
    ENABLE_METRICS=True \
    CPP_TEST=False \
    CUSTOM_CXXFLAGS="-DBOOST_OPTIONAL_CONFIG_USE_OLD_IMPLEMENTATION_OF_OPTIONAL $CXXFLAGS" \
    CXX="clang++"

#   python2 scons/scons.py configure \
#     PREFIX="/usr" \
#     DESTDIR="$pkgdir" \
#     INPUT_PLUGINS=all \
#     XMLPARSER=libxml2 \
#     ENABLE_METRICS=True \
#     DEBUG=True \
#     ENABLE_LOG=True \
#     ENABLE_STATS=True \
#     CUSTOM_CXXFLAGS="-DBOOST_OPTIONAL_CONFIG_USE_OLD_IMPLEMENTATION_OF_OPTIONAL $CXXFLAGS $DEBUG_CXXFLAGS" \
#     CXX="clang++"

  python2 scons/scons.py $MAKEFLAGS
}

package() {
  cd "$_pkgname"
  python2 scons/scons.py install
  sed -i 's/CONFIG_PREFIX=.*/CONFIG_PREFIX="\/usr"/' $pkgdir/usr/bin/mapnik-config
}
