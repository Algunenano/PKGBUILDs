pkgname=mapnik-git
_pkgname=mapnik
pkgver=3.0.15.4.45.ga01967dec.cache_metrics
pkgrel=1
pkgdesc="A powerful map rendering toolkit used by OpenStreetmap and others"
arch=('i686' 'x86_64')
url="http://mapnik.org/"
license=('LGPL')
depends=('boost-libs' 'icu' 'libpng' 'libjpeg-turbo' 'libtiff' 'freetype2'
	 'libxml2' 'python2' 'proj' 'cairo' 'cairomm' 'python2-cairo'
	 'postgresql-libs' 'postgis' 'gdal' 'curl' 'libltdl')
optdepends=('libxslt:         Web Map Service'
            'python2-lxml:    Web Map Service'
            'python2-pillow:  Web Map Service'
            'python2-nose:    Web Map Service'
            'apache:          Web Map Service'
            'mod_fastcgi:     Web Map Service'
            'mod_fcgid:       Web Map Service'
            'mod_wsgi2:       Web Map Service')
makedepends=('boost' 'git' 'clang')
install="mapnik.install"
conflicts=("$_pkgname")
provides=("${_pkgname}=${pkgver}")
_owner="Algunenano"
_branch="cache_metrics"
source=("git://github.com/$_owner/$_pkgname.git#branch=$_branch")
sha256sums=('SKIP')

pkgver() {
  cd "$_pkgname"
  printf "%s.$_branch" "$(git describe --long --tags | cut -c2- | sed 's/-/./g')" 
}

build() {
  cd "$_pkgname"

  git submodule update --init deps/mapbox/variant

  python2 scons/scons.py configure \
    PREFIX="/usr" \
    DESTDIR="$pkgdir" \
    INPUT_PLUGINS=all \
    XMLPARSER=libxml2 \
    ENABLE_METRICS=True \
    ENABLE_STATS=False \
    CPP_TESTS=False \
    DEBUG=False \
    ENABLE_LOG=False \
    CUSTOM_CXXFLAGS="-DBOOST_OPTIONAL_CONFIG_USE_OLD_IMPLEMENTATION_OF_OPTIONAL $CXXFLAGS $DEBUG_CXXFLAGS" \
    CC="clang" \
    CXX="clang++"

#   python2 scons/scons.py configure \
#     PREFIX="/usr" \
#     DESTDIR="$pkgdir" \
#     INPUT_PLUGINS=all \
#     XMLPARSER=libxml2 \
#     ENABLE_METRICS=True \
#     ENABLE_STATS=False \
#     CPP_TESTS=True \
#     DEBUG=False \
#     ENABLE_LOG=False \
#     CUSTOM_CXXFLAGS="-march=native -mtune=native -O3 -pipe -fstack-protector-strong -fno-plt -Wall -Wextra -g3 -gdwarf-4 -fno-omit-frame-pointer -DBOOST_OPTIONAL_CONFIG_USE_OLD_IMPLEMENTATION_OF_OPTIONAL" \
#     CC="clang" \
#     CXX="clang++"

# MSAN_OPTIONS=halt_on_error=0,exitcode=0 \
#   python2 scons/scons.py configure \
#     PREFIX="/usr" \
#     DESTDIR="$pkgdir" \
#     INPUT_PLUGINS=all \
#     XMLPARSER=libxml2 \
#     ENABLE_METRICS=True \
