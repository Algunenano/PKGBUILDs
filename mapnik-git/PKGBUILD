#     CPP_TESTS=True \
#     DEBUG=False \
#     ENABLE_LOG=False \
#     CUSTOM_CXXFLAGS="-march=native -mtune=native -O2 -pipe -fstack-protector-strong -fno-plt -Wall -Wextra -Wconversion -g3 -gdwarf-4 -fno-omit-frame-pointer -DBOOST_OPTIONAL_CONFIG_USE_OLD_IMPLEMENTATION_OF_OPTIONAL -fsanitize=memory -fsanitize-recover=memory -fsanitize-blacklist=/home/raul/dev/public/mapnik/blacklist.supp -fsanitize-memory-track-origins=2" \
#     CUSTOM_LDFLAGS="-fsanitize=memory -fsanitize-recover=memory -fsanitize-blacklist=/home/raul/dev/public/mapnik/blacklist.supp -fsanitize-memory-track-origins=2" \
#     CC="/bin/clang" \
#     CXX="/bin/clang++"

#   python2 scons/scons.py configure \
#     PREFIX="/usr" \
#     DESTDIR="$pkgdir" \
#     INPUT_PLUGINS=all \
